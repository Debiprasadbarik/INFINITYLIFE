@model InfinityLife.Models.DashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">HR Dashboard</h2>
            @* <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form> *@
            <div class="alert alert-info">
                Welcome back, @Model.Employee?.EmpFirstName
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Employees Section -->
        <div class="col-12 col-xl-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Employees</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Join Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* @foreach (var employee in Model.RecentEmployees ?? new List<Employee>())
                                {
                                    <tr>
                                        <td>@employee.EmpName</td>
                                        <td>@employee.Department</td>
                                        <td>@employee.JoinDate?.ToShortDateString()</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Employee", new { id = employee.EmpId })"
                                               class="btn btn-sm btn-primary">Edit</a>
                                        </td>
                                    </tr>
                                } *@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-12 col-xl-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Create", "Employee")" class="btn btn-success btn-block mb-2">
                        <i class="fas fa-user-plus mr-1"></i> Add New Employee
                    </a>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-primary btn-block mb-2">
                        <i class="fas fa-users mr-1"></i> View All Employees
                    </a>
                    <a href="#" class="btn btn-info btn-block">
                        <i class="fas fa-file-alt mr-1"></i> Generate Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
