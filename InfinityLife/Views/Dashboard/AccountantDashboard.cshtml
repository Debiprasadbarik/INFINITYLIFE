@model InfinityLife.Models.DashboardViewModel
@{
    ViewData["Title"] = "Accountant Dashboard";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">Accountant Dashboard</h2>
            @* <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form> *@
            <div class="alert alert-info">
                Welcome, @Model.Employee?.EmpFirstName
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Financial Overview -->
        <div class="col-12 col-xl-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Financial Overview</h6>
                </div>
                <div class="card-body">
                    <!-- Placeholder for financial charts -->
                    <div class="alert alert-warning">
                        Financial data visualization will be implemented here
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-12 col-xl-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-primary btn-block mb-2">
                        <i class="fas fa-file-invoice-dollar mr-1"></i> Process Payroll
                    </a>
                    <a href="#" class="btn btn-success btn-block mb-2">
                        <i class="fas fa-chart-line mr-1"></i> Financial Reports
                    </a>
                    <a href="#" class="btn btn-info btn-block">
                        <i class="fas fa-calculator mr-1"></i> Expense Management
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
