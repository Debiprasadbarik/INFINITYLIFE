@model InfinityLife.Models.PaySlipViewModel

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <img src="/images/image.png" width="300" height="70" />
            @* <h3 class="mb-0">Pay Slip</h3> *@
            <div>
                @* <a asp-action="Download"
                   asp-route-employeeId="@Model.EmployeeId"
                   asp-route-payPeriod="@Model.PayPeriod.ToString("yyyy-MM-dd")"
                   class="btn btn-primary">
                    <i class="fas fa-download"></i> Download PDF
                </a> *@
                <a href="@Url.Action("Download", "PaySlip", new { employeeId = Model.EmployeeId, payPeriod = Model.PayPeriod })"
                   class="btn btn-primary">
                    Download PDF
                </a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <h2 style="text-align:center;">Payslip</h2>
                <h3 style="text-align:center;" >InfinityMinds Consulting Pvt Ltd.</h3>
                <div class="col-md-6">
                    <h5>Employee Details</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Employee ID</th>
                            <td>@Model.EmployeeId</td>
                        </tr>
                         <tr>
                            <th>Name</th>
                            <td>@($"{Model.EmployeeName}")</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.EmployeeMail</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6" style="padding-top:35px;" >
                    <table class="table table-bordered">
                        <tr>
                            <th>Pay Period</th>
                            <td>@Model.PayPeriod.ToString()</td>
                        </tr>
                        
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5 style="font-weight:bold;">Gross Earnings</h5>
                    <table class="table table-bordered">
                        <tr class="table-info" >
                            <th>Basic Pay</th>
                            <td class="text-end">₹@Model.BasicSalary.ToString()</td>
                        </tr>
                        <tr class="table-info" >
                            <th>HRA</th>
                            <td class="text-end">₹@Model.HRA.ToString()</td>
                        </tr>
                        <tr class="table-info" >
                            <th>Conveyance Allowance</th>
                            <td class="text-end">₹@Model.Conveyance.ToString()</td>
                        </tr>
                        <tr class="table-info" >
                            <th>Other Allowance</th>
                            <td class="text-end">₹@Model.OtherAllowances.ToString()</td>
                        </tr>
                        <tr class="table-info" >
                            <th>Bonus</th>
                            <td class="text-end">₹@Model.Bonus.ToString()</td>
                        </tr>
                        <tr class="table-info">
                            <th>Total Earnings</th>
                            <td class="text-end">₹@((Model.BasicSalary + Model.HRA + Model.Conveyance + Model.OtherAllowances + Model.Bonus).ToString())</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Deductions</h5>
                    <table class="table table-bordered">
                        <tr class="table-info">
                            <th>PF</th>
                            <td class="text-end">₹@Model.PF.ToString()</td>
                        </tr>
                        <tr class="table-info">
                            <th>ESIC</th>
                            <td class="text-end">₹@Model.ESIC.ToString()</td>
                        </tr>
                        <tr class="table-info">
                            <th>Professional Tax</th>
                            <td class="text-end">₹@Model.ProfessionalTax.ToString()</td>
                        </tr>
                        <tr class="table-info">
                            <th>IncomeTax</th>
                            <td class="text-end">₹@Model.IncomeTax.ToString()</td>
                        </tr>
                        <tr class="table-info">
                            <th>Total Deduction</th>
                            <td class="text-end">₹@((Model.PF + Model.ESIC + Model.ProfessionalTax + Model.IncomeTax + Model.OtherAllowances).ToString())</td>
                        </tr>
                    </table>
                </div>
                <div class="row-cols-md-5">
                    <h5>Net Earning</h5>
                    <p style="font-weight:bold;">@((Model.BasicSalary + Model.HRA + Model.Conveyance + Model.OtherAllowances + Model.Bonus) - (Model.PF + Model.ESIC + Model.ProfessionalTax + Model.IncomeTax + Model.OtherAllowances))</p>
                </div>
            </div>
        </div>
    </div>
</div>