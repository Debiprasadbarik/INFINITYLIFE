

<div class="container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-6">Verify Reset Password</h1>

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-500 text-white p-4 mb-6 rounded">
            @TempData["Error"]
        </div>
    }

    <form asp-action="VerifyResetPassword" method="post">
        <div class="mb-4">
            <label for="code" class="block font-medium mb-2">Reset Password Code</label>
            <input type="text" id="code" name="code" class="border border-gray-300 rounded px-3 py-2 w-full" required>
        </div>
        <div class="mb-4">
            <label for="newPassword" class="block font-medium mb-2">New Password</label>
            <input type="password" id="newPassword" name="newPassword" class="border border-gray-300 rounded px-3 py-2 w-full" required>
        </div>

        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
            Reset Password
        </button>
    </form>
</div>